<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Snippit:</strong>
  <%= @post.snippit %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<h3>Comments</h3>
<p>
  <% @post.comments.each do |comment| %>
    <%= comment.user.first_name %> <%= comment.user.last_name %> at <%= comment.updated_at %>:<br/>
    <%= comment.comment %><br/><br/>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
