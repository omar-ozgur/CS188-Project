<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Snippit:</strong>
  <%= @post.snippit %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<br>

<h3>Comments</h3>

<p>
  <% if @post.comments.present? %>
    <% @post.comments.each do |comment| %>
      <%= comment.user.first_name %> <%= comment.user.last_name %> at <%= comment.updated_at %>:<br/>
      <%= comment.comment %><br/><br/>
    <% end %>
  <% else %>
    <p>There are currently no comments on this post.</p>
  <% end %>
</p>

<br>

<h3>Make new comment</h3>

<% if current_user %>
  <%= render 'comments/form', comment: Comment.new, user_id:current_user.id, post_id: @post.id %>
<% else %>
  <p>You must be logged in to comment</p>
<% end %>

<br>

<h3>Modify This Post</h3>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Delete', post_path(@post), method: :delete %>
