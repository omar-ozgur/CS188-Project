<%# app/views/posts/_feed.html.erb %>
<div id="filterrific_results">

  <div>
    <%= page_entries_info posts %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tags</th>
        <th>User</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% posts.each do |post| %>
        <tr>
          <td><a href="<%= post_path(post) %>"><%= truncate(post.snippit, :length => 30) %></a></td>
          <td><p><%=raw post.all_tags%></p></td>
          <td><a href="<%= profile_path(post.user.id) %>"><%= post.user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate posts %>