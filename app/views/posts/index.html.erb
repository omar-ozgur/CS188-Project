<p id="notice"><%= notice %></p>

<h1 class="text-center">Snippits</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><a href="<%= post_path(post) %>"><%= post.description %></a></td>
        <td><a href="<%= profile_path(post.user.id) %>"><%= post.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>